pipeline {
    agent any
    tools{
        maven 'maven'
    }
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/ganjiprasannapujitha03/spring_boot_application.git'
            }
        }
        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Deploy to App Server') {
            steps {
                sshagent(['Pujitha-appserver']) {
                    sh '''
                        scp -o StrictHostKeyChecking=no target/*.jar ubuntu@13.39.20.9:/home/ubuntu/app.jar
                        ssh ubuntu@13.39.20.9 "nohup java -jar /home/ubuntu/app.jar > app.log 2>&1 &"
                    '''
                }
            }
        }
    }
}
